<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pazaak.prototype.pazaakprototype">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".DeckBuilder"
            android:screenOrientation="landscape" />
        <activity
            android:name=".TutorialMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SetAIDifficulty"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Table"
            android:screenOrientation="landscape" />
        <activity android:name=".Rulebook" />
        <activity android:name=".Walkthrough"></activity>
    </application>

</manifest>